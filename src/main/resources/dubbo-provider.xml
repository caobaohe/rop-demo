<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <!-- 提供方应用信息，用于计算依赖关系 -->
    <dubbo:application name="hello-world-app"/>

    <!-- 使用multicast广播注册中心暴露服务地址 -->
    <!--<dubbo:registry address="multicast://224.5.6.7:1234"/>-->
    <dubbo:registry id="demoRegister" protocol="zookeeper" address="119.29.178.37:2181"/>

    <!-- 用dubbo协议在20880端口暴露服务 -->
    <dubbo:protocol name="dubbo" port="20880"/>

    <dubbo:annotation package="com.cbh.demo.service.impl"/>

    <dubbo:provider registry="demoRegister" version="0.1"/>
    <!-- 声明需要暴露的服务接口 -->
    <!--<dubbo:service interface="com.cbh.demo.service.UserService" ref="userService" registry="demoRegister"/>-->
    <!--<dubbo:service interface="com.cbh.demo.service.AppInfoService" ref="appInfoService" registry="demoRegister"/>-->

    <!-- 和本地bean一样实现服务 -->
